{
  "schema_version": 1,
  "mixin": [
    "sleepingoverhaul.mixins.json",
    "sleepingoverhaul-common.mixins.json"
  ],
  "quilt_loader": {
    "group": "${group}",
    "id": "sleepingoverhaul",
    "version": "${version}",
    "name": "SleepingOverhaul",
    "description": "Replaces skip-to-day on sleep with a beautiful panoramic timelapse, and more!",
    "authors": ["CosmicDan"],
    "contact": {
      "homepage": "https://www.cosmicdan.com",
      "sources": "https://github.com/CosmicDan-Minecraft/SleepingOverhaul2/"
    },
    "license": "LGPL3",
    "icon": "logo.png",
    "intermediate_mappings": "net.fabricmc:intermediary",
    "environment": "*",
    "entrypoints": {
      "init": [
        "com.cosmicdan.sleepingoverhaul.quilt.SleepingOverhaulQuilt"
      ]
    },
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": ">=1.18.2"
      },
      {
        "id": "architectury",
        "version": ">=4.8.79"
      }
    ]
  }
}